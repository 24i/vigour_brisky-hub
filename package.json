{
  "name": "brisky-hub",
  "version": "1.1.5",
  "description": "Connected vigour-state, works as a server and a client",
  "engines": {
    "node": "^4.1.1"
  },
  "main": "lib/index.js",
  "bin": {
    "hub-server": "bin/server.js"
  },
  "scripts": {
    "test": "(ducktape; node test) | tap-difflet && standard lib",
    "dev": "nodemon test | tap-difflet",
    "now-install": "(test -d ../uws && cd ../uws && rm uws_*.node && npm install) || (test -d node_modules/uws && cd node_modules/uws && rm uws_*.node && npm install)",
    "start": "node bin/server",
    "dev-perf": "nodemon --prof test/performance/index.js | tap-difflet",
    "profile": "node --prof-process $(ls isolate-*) > processed.txt",
    "cover": "istanbul cover --report none --print detail test/index.js",
    "travis": "npm run cover -s && istanbul report lcov && ((cat coverage/lcov.info | coveralls) || exit 0) && standard lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vigour-io/hub.git"
  },
  "keywords": [
    "javascript",
    "hub",
    "communication",
    "state",
    "reactive",
    "webrtc",
    "websocket",
    "xhr"
  ],
  "author": "Jim de Beer <jim@vigour.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vigour-io/hub/issues"
  },
  "browser": {
    "./lib/downstream/server/create/index.js": "./lib/downstream/server/create/browser.js"
  },
  "dependencies": {
    "bubleify": "0.5.1",
    "quick-hash": "^1.0.1",
    "clocksy": "^1.1.0",
    "websocket": "^1.0.0",
    "vigour-stamp": "^1.3.6",
    "vigour-ua": "^2.0.0",
    "vigour-state": "^4.8.0",
    "vigour-util": "^3.3.0",
    "monotonic-timestamp": "^0.0.9",
    "uws": "0.8.0"
  },
  "browserify": {
    "transform": [
      "bubleify"
    ]
  },
  "devDependencies": {
    "ducktape": "^1.0.0",
    "tape": "^4.4.0",
    "tap-difflet": "0.6.0",
    "vigour-performance": "^1.3.0",
    "nodemon": "^1.9.1",
    "coveralls": "^2.11.9",
    "istanbul": "^0.4.3",
    "standard": "^8.1.0",
    "pre-commit": "^1.1.3",
    "budo": "^9.0.0"
  },
  "homepage": "https://github.com/vigour-io/hub#readme"
}
