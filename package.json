{
  "name": "vigour-hub",
  "version": "0.0.1",
  "description": "Connected vigour-state, works as a server and a client",
  "engines": {
    "node": "^4.1.1"
  },
  "main": "lib/index.js",
  "scripts": {
    "test": "(ducktape; node test) | tap-difflet && standard",
    "watch": "nodemon test | tap-difflet",
    "cover": "istanbul cover --report none --print detail test/index.js",
    "docs": "node_modules/vigour-doc/bin/vdoc",
    "travis": "npm run cover -s && istanbul report lcov && ((cat coverage/lcov.info | coveralls) || exit 0) && standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vigour-io/hub.git"
  },
  "keywords": [
    "javascript",
    "hub",
    "communication",
    "state",
    "reactive",
    "webrtc",
    "websocket",
    "xhr"
  ],
  "author": "Jim de Beer <jim@vigour.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vigour-io/hub/issues"
  },
  "browser": {
    "./lib/downstream/server/create/index.js": "./lib/downstream/server/create/browser.js"
  },
  "dependencies": {
    "clocksy": "^1.1.0",
    "lodash.merge": "^4.0.0",
    "lodash.set": "^4.0.0",
    "websocket": "^1.0.0",
    "vigour-stamp": "^1.3.6",
    "vigour-state": "^4.3.1",
    "vigour-util": "^3.3.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.3.0",
    "monotonic-timestamp": "^0.0.9",
    "uws": "0.7.9"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "ducktape": "^1.0.0",
    "tape": "^4.4.0",
    "freeport": "^1.0.5",
    "tap-difflet": "0.4.0",
    "vigour-performance": "^1.3.0",
    "nodemon": "^1.9.1",
    "coveralls": "^2.11.9",
    "istanbul": "^0.4.3",
    "standard": "^7.0.1",
    "pre-commit": "^1.1.3",
    "budo": "^8.2.2"
  },
  "homepage": "https://github.com/vigour-io/hub#readme"
}
